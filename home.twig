{% extends "layout.twig" %}
{% block content %}

<!-- CONTAINER -->
<div class="template-container">
	<div class="home-page">

		<!-- FULL SCREEN SLIDESHOW -->
		{{widget('responsiveslideshow', 'slideshow', {
			'duration':'4',
			'transSpeed': '2000',
			'transType': 'fade',
			'showButtons': false,
			'showBullets': true,
			'allowPause': false,
			'allowLoop': false,
			'crop': true,
			'images':[
			{
				'imageHeight':'auto',
				'imageWidth':'100%',
				'url':asset('images/slide-5.jpg')
			},
			{
				'imageHeight':'auto',
				'imageWidth':'100%',
				'url':asset('images/slide-3.jpg')
			},
			{
				'imageHeight':'auto',
				'imageWidth':'100%',
				'url':asset('images/slide-4	.jpg')
			}
			]
		})|raw}}

		<!-- HEADER -->
		{% include "includes/header.twig" %}
		
	</div>

	<div class="default-profile">
		{{widget('profile', 'main-profile', { 'profileType':'form', 'formTitle':'Sign up to our newsletter'})|raw}}
	</div>

		<!-- Homepage Feature -->
	<div class="introsuxceed">
		{{widget('feature', 'introsuxceed', {
			"header": "INSPIRED BY CULTURE",
			"strapline": "A UK based contemporary streetwear brand combining influences and inspiration from the oriental culture. Stocked and sold at our 71 Queens stores in Bristol and Bath, our aim is to bring something new, something unique and something fresh onto the streetwear scene.",
			"defaultBgImg": asset('images/feature-bg.jpg'),
			'positionTopPercentage': '0',
			'showBtn': true,
			buttonText: "Lorem Ipsum"
		})|raw}}
		</div>
		<!-- End Homepage Feature -->
		
		<!-- Homepage Feature -->
			<div class="featuresummer">
		{{widget('feature', 'featuresummer', {
			"header": "OUR COLLECTION",
			"strapline": "Visit the online store to view our clothing range",
			"defaultBgImg": asset('images/feature-bg.jpg'),
			'positionTopPercentage': '0',
			'showBtn': true,
			buttonText: "VISIT STORE"
		})|raw}}
		</div>
<!-- End Homepage Feature -->

	<!-- MAIN SECTION -->
	<div role="main" id="main">

		<div class="homepage-container">

		<div class="title">
            {{widget('content', 'instagramtitle', {
            content: '<h1>Instagram</h1>'
            })|raw}}
        </div>
        <div class="text">
            {{widget('content', 'instagramtext', {
            content: '<p>Support the Movement, Like Us and Follow Us @suxceedapparel - Our Store: @71queens</p>'
            })|raw}}
        </div>

        

<!-- LightWidget WIDGET --><script src="//lightwidget.com/widgets/lightwidget.js"></script><iframe src="//lightwidget.com/widgets/5f03b4e79a655c73976c52db764934dd.html" scrolling="no" allowtransparency="true" class="lightwidget-widget" style="width: 100%; border: 0; overflow: hidden;"></iframe>



		<!-- MAIN ZONE -->
		{{zone('main')|raw}}

		</div>

	</div>
	
	<!-- FOOTER -->
	{% include "includes/footer.twig" %}

</div>
<!-- END CONTAINER -->

{% endblock %}
