{% extends "layout.twig" %}
{% block content %}

<div class="bk-pt-default">

<!-- CONTAINER -->
<div class="template-container">
	<div class="default-page">

	   <header class="template-header">
	       <div class="container">
	   	   {{widget('logo', 'header-logo', {"defaultlogo": asset('images/logo-black.png')})|raw}}
	   	   {{widget('companyname', 'companyname', {"business": "ODENSE", "showTplWidget":"0"})|raw}}
	   	   {{widget('extendednavigation', 'header-nav', {"align":"right"})|raw}}
	   	   {{widget('ecombasket', 'shopbasket', {})|raw}}
	       </div>
	   </header>

	   <!-- MAIN SECTION -->
	   <div role="main" id="main">
    
	   	<div class="container">
    
	   		<!-- MAIN ZONE -->
	   		{{zone('main')|raw}}
    
	   	</div>
    
	   </div>

	<div class="default-profile">
		{{widget('profile', 'main-profile', { 'profileType':'form', 'formTitle':'Sign up to our newsletter'})|raw}}
	</div>

		<div class="instagram">

            <!-- LightWidget WIDGET --><script src="//lightwidget.com/widgets/lightwidget.js"></script><iframe src="//lightwidget.com/widgets/49abac0ea6035c9d9301cef3004ed333.html" id="lightwidget_49abac0ea6" name="lightwidget_49abac0ea6"  scrolling="no" allowtransparency="true" class="lightwidget-widget" style="border:none; overflow:hidden; width:1200px; height:150px"></iframe>

        </div>

    </div>

	<!-- FOOTER -->
	{% include "includes/footer.twig" %}

	</div>
    
</div>
<!-- END CONTAINER -->

{% endblock %}
